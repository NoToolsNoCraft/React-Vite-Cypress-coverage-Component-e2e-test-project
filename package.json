{
  "name": "react-testing-vite",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext .ts,.tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "start": "concurrently \"npm run server\" \"npm run dev\"",
    "server": "json-server --watch src/data/db.json --delay 500",
    "test": "cypress run",
    "test:componente": "cypress run --component",
    "test:component": "start-server-and-test dev http://localhost:5173 \"cypress run --component\"",
    "test:e2e": "start-server-and-test dev http://localhost:5173 \"cypress run --e2e\"",
    "coverage": "nyc report --reporter=lcov --reporter=text-summary",
    "test:e2e:coverage": "start-server-and-test dev http://localhost:5173 \"cypress run --e2e --env coverage=true\"; npm run coverage",
    "test:e2e:coverage:noerror": "start-server-and-test dev http://localhost:5173 \"cypress run --e2e --env coverage=true || exit 0\" && npm run coverage",
    "test:component:coverage": "start-server-and-test dev http://localhost:5173 \"cypress run --component --env coverage=true\" && npm run coverage"

  },
  "dependencies": {
    "@auth0/auth0-react": "^2.2.3",
    "@hookform/resolvers": "^3.3.2",
    "@radix-ui/themes": "^2.0.0",
    "@reduxjs/toolkit": "^1.9.7",
    "axios": "^1.6.0",
    "delay": "^6.0.0",
    "json-server": "^0.17.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.47.0",
    "react-hot-toast": "^2.4.1",
    "react-icons": "^4.12.0",
    "react-loading-skeleton": "^3.3.1",
    "react-query": "^3.39.3",
    "react-redux": "^8.1.3",
    "react-router-dom": "^6.17.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@cypress/code-coverage": "^3.14.6",
    "@cypress/vite-dev-server": "^7.0.0",
    "@tailwindcss/typography": "^0.5.10",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^14.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.7",
    "@types/testing-library__user-event": "^4.2.0",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.16",
    "babel-plugin-istanbul": "^7.0.1",
    "concurrently": "^8.2.2",
    "cross-env": "^10.0.0",
    "cypress": "^15.2.0",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "jest": "^30.1.3",
    "jsdom": "^24.0.0",
    "mocha": "^11.7.2",
    "nyc": "^17.1.0",
    "postcss": "^8.4.31",
    "start-server-and-test": "^2.1.2",
    "tailwindcss": "^3.3.5",
    "ts-jest": "^29.4.4",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "vite-plugin-istanbul": "^7.2.0",
    "vitest": "^3.2.4"
  }
}
